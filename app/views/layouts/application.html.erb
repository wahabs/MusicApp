<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to "Band List", bands_url %>
<br>

<% if current_user.nil? %>
  <br><%= link_to "Login", new_session_url %> or <%= link_to "Sign Up!", new_user_url %>
<% else %>
  <br><%= link_to "Profile", user_url %>
  <br><%= link_to "Logout", session_url, method: :delete %>
<% end %>

<%= yield %>

</body>
</html>
